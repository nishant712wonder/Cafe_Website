	<textarea name="Message" cols="30" rows="6" placeholder="Special Instructions/ Requests"></textarea>
        <br>
	<input class="submit" type="submit" value="Place Order">
</form>

<script>
// contact form submission without page refresh
var $contactForm = $('#contact-form');
$contactForm.submit(function(e) {
    e.preventDefault();
    $.ajax({
        url: '//formspree.io/embarnese4@hotmail.com',
        method: 'POST',
        data: $(this).serialize(),
        dataType: 'json',
        beforeSend: function() {
            $contactForm.append('<div class="alert alert--loading">Placing orderâ€¦</div>');
        },
        success: function(data) {
            $contactForm.find('.alert--loading').hide();
            $contactForm.append('<div class="alert alert--success">Thank you for your order. See you soon!</div>');
        },
        error: function(err) {
            $contactForm.find('.alert--loading').hide();
            $contactForm.append('<div class="alert alert--error">Oops, there was an error. Please try again!</div>');
        }
    });
}); 
</script>
